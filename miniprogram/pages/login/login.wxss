/* miniprogram/pages/login/login.wxss */
 
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

.userinfo {  
  position: relative;  
  height: 320rpx;  
  width: auto;
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  
}  

.avatar-img{
  overflow: hidden;
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx;
  margin-top: 20rpx;
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
  display: block;
}

